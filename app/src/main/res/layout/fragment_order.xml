<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.orderFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="87dp"
        android:layout_marginTop="48dp"
        app:cardCornerRadius="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.067"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.478"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/noofquantity"
                android:layout_width="30dp"
                android:layout_height="24dp"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/lato_bold"
                android:text="5"
                android:textColor="@color/darkblue"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/itemsofcloth"
                app:layout_constraintStart_toEndOf="@+id/itemsofcloth"
                app:layout_constraintTop_toTopOf="@+id/itemsofcloth"
                app:layout_constraintVertical_bias="0.571" />

            <TextView
                android:id="@+id/itemsofcloth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_bold"
                android:text="Priyank"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.111"
                app:layout_constraintStart_toEndOf="@+id/imageView4"
                app:layout_constraintTop_toTopOf="@+id/imageView4"
                app:layout_constraintVertical_bias="0.51" />

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="82dp"
                android:layout_height="48dp"
                android:layout_marginStart="12dp"
                android:fontFamily="@font/lato_black"
                android:text="Accept"
                app:layout_constraintBottom_toBottomOf="@+id/noofquantity"
                app:layout_constraintStart_toEndOf="@+id/noofquantity"
                app:layout_constraintTop_toTopOf="@+id/noofquantity" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>